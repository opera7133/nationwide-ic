---
import Viewer from "../components/Viewer.astro";
import "../styles/global.css";
const { title, description } = Astro.props;
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? title : "全国(共通)交通系ICカード一覧"}</title>
    {description && <meta name="description" content={description} />}
  </head>
  <body class="container max-w-2xl mx-auto">
    <!-- <Viewer /> -->
    <main class="shadow-lg px-6 py-4">
      <h1 class="text-2xl font-bold">全国(共通)交通系ICカード一覧</h1>
      <p class="mt-1">全国の交通系ICカード情報を一元管理します。</p>
      <slot />
      <div class="text-center text-sm text-gray-500 my-8">
        <a href="https://wmsci.com/" class="mr-4 underline">wmsci.com</a>
        <a
          href="https://github.com/opera7133/nationwide-ic"
          class="mr-4 underline"
          target="_blank"
          rel="noopener noreferrer">リポジトリ</a
        >
        <a
          href="https://github.com/opera7133/nationwide-ic/issues/new"
          class="underline"
          target="_blank"
          rel="noopener noreferrer">各種提案</a
        >
      </div>
    </main>
  </body>
</html>
